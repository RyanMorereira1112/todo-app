<main>
    <section class="tarefas">
        {{#each tarefas}}
        <div class="tarefa">
            <form action="">
                
                <div class="completa">
                    <input type="checkbox" id="tarefa-{{this.id}}" checked onchange="descompletarTarefa({{this.id}})">
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>

                <button>
                    <img src="/imagens/X-icon.png" alt="icone de X para excluir uma tarefa">
                </button>
            </form>
        </div>
        {{/each}}
        <div>
            <div class="informacoes">
                <p>{{quantidadeTarefas}} Tarefas completas</p>

                <div class="botoes">
                    <a href="/">Todas</a>
                    <a href="/ativas" >Ativas</a>
                    <a href="/completas" class="active" >Completas</a>
                </div>

                <a href="">Limpar tarefas</a>
            </div>
        </div>
    </section>

    <section class="botoes">
        <a href="/" >Todas</a>
        <a href="/ativas">Ativas</a>
        <a href="/completas" class="active">Completas</a>

    </section>
</main>